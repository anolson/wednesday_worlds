<h2><%= @ride.name %></h2>

<div class="box">
  <h3>Routes</h3>
  <div class="ride">
    <% @ride.routes.each do |route| %>
      <div class="route">
        <p>
          <strong><%= link_to route.name, ride_routes_path(route) %></strong> 
          <small><%= link_to "map", route.map_url %></small> <br/>
          <%= route.occurrence.begins_at.strftime("%l:%M") %> - <%= @ride.location %> <br/> 
          <%= route.description %> 
        </p>          
      </div>
    <% end %>
    <div class="text_right">
    <%= link_to "All rides", rides_path %>  
    </div>
    
  </div>
</div>





