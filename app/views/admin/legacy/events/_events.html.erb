<% if @ride.events.empty? %>
  <p class="center">Looks like there aren't any events!</p>
<% else %>
  <table border="0" cellspacing="0" cellpadding="5">
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Route</th>
      <th></th>
    </tr>
    <%= render :partial => 'admin/legacy/events/event', :collection => @ride.events %>
  </table>
<% end %>
