  <div class="route">
    <p>
      <strong><%= link_to route.name, ride_route_path(route.ride, route)%></strong> 
      <small><%= link_to "map", route.map_url %></small> <br/>
      <span><%= route.ride.location %></span> <br />
      <span><%= route.occurrence.begins_at.strftime("%l:%M%p").downcase %></span>
      
      
      <% if(route.occurrence.occurs_this_week?) %>
        <small class="light"><%= route.occurrence.this_weeks_date.strftime("%m/%d/%Y") %></small>
        <small class="light">(this week)</small>
      <% end%>
      <br/>
      <span><%= route.description %></span>
      
      <% if(display_all_dates) %>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr><td>Dates</td></tr>
          <% route.occurrence.dates.each do |date| %>
            <tr>
              <td>
                <%= date.strftime("%m/%d/%Y") %>
                           
                <% if(route.occurrence.date_occurs_during_this_week?(date)) %>
                  <small class="light">(this week)</small>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </p>          
  </div>